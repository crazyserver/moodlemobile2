  {
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./src",
    "outDir": "./e2e/build",
    "paths": {
      "@addon/*": ["addon/*"],
      "@app/*": ["app/*"],
      "@classes/*": ["classes/*"],
      "@core/*": ["core/*"],
      "@providers/*": ["providers/*"],
      "@components/*": ["components/*"],
      "@directives/*": ["directives/*"],
      "@pipes/*": ["pipes/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "e2e",
    "src/**/e2e/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
